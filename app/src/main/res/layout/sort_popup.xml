<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/xxl"
    android:clickable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/xxl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/xxxxl">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/xxxxl"
            android:text="@string/sort_by"
            android:textSize="@dimen/tx_xxxxl"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbAZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A → Z" />

            <RadioButton
                android:id="@+id/rbZA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z → A" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxxxl">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbDone"
                android:layout_width="@dimen/confirmation_dialog_btn_width"
                android:layout_height="@dimen/confirmation_dialog_btn_height"
                android:backgroundTint="@color/orange"
                android:text="@string/done"
                app:cornerRadius="@dimen/xxs" />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
