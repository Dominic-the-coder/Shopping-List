<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/xxl"
    android:clickable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/xxl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/xxxxl">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/xxxxl"
            android:text="@string/are_you_sure"
            android:textSize="@dimen/tx_xxxxl"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_confirm"
            android:textSize="@dimen/tx_xxl" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxxxl">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbCancel"
                android:layout_width="@dimen/confirmation_dialog_btn_width"
                android:layout_height="@dimen/confirmation_dialog_btn_height"
                android:layout_marginEnd="@dimen/xxxxl"
                android:backgroundTint="@color/teal"
                android:text="@string/cancel"
                app:cornerRadius="@dimen/xxs" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbConfirm"
                android:layout_width="@dimen/confirmation_dialog_btn_width"
                android:layout_height="@dimen/confirmation_dialog_btn_height"
                android:backgroundTint="@color/red"
                android:text="@string/delete"
                app:cornerRadius="@dimen/xxs" />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>